
@{
    Layout = null;
}

<!DOCTYPE html>
@using flex.Models;
@model student
<html lang="en">
<head>
    <title>Student homePage</title>
    <style type="text/css" media="screen">
    
body{
background-color: blanchedalmond;
    
}
.left_bar{
    display: block;
    width:150px;
    height: 100%;
    background-color: cadetblue;
    top:0;
    color: white;
    left:0;
    position:fixed;
}
.left_bar a{
    color: white;
}

.Left_Bar1
{
    text-align: center;
    color:black;
    font-size: 1.3em;
    margin-top:55px;
    display: block;
    text-decoration: none;
}
.box2{
     width: 94%;
    margin-left: 3%;
    margin-right: 3%;
}
.box2 h1{
    padding-left: 10px;
    padding-top: 20px;
    padding-bottom: 20px;
    color: white;
    background-color:cadetblue;
    font-size: 20px;
}
.totalHOME{
 margin-left: 150px;   
margin-right: 15px;
}
.box_2nd1{
     height: 200px;
   
   margin-top: 30px;
    border-bottom:2px solid red;
}
.box1{
    height: 100px;
   
   margin-top: 30px;
    border-bottom:2px solid red;
}

.totalHome h1{
    font-size: 03px;
}

.mine{
   font-size: 17px;
    margin-bottom: 5px;
   margin-right: 300px;
    display: inline-block;
}
.margin_Top{
    margin-top: 70px;
}
.mine1{
       font-size: 17px;
    margin-bottom: 5px;
   margin-right: 300px;
    display: block;
}
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="left_bar ">
        <nav>
            <a class="Left_Bar1" href="./homePage">Home</a> <br>
            <a class="Left_Bar1" href="./Attendance">Attendance</a> <br>
            <a class="Left_Bar1" href="./CourseRegisteration">Course Rgistration</a> <br>
            <a class="Left_Bar1" href="./Marks">Marks</a> <br>
            <a class="Left_Bar1" href="./Transcript">Transcript</a>
            <a class="Left_Bar1" href="./Society">Society</a>
            <a class="Left_Bar1" href="./Notification">Notification</a>
        </nav>
    </div>
    <div class="totalHOME">
        <h3>STUDENT INFORMATION | Home</h3>


        <div class="box2">
            <h1>University Information</h1>

            <ul class="box1">
                @{student stu = (student)Model;
                <li class="mine">ROll_No:@stu.RollNo</li>
                <li class="mine">Name:@stu.name</li>
                <li class="mine">Email:@stu.Email</li>
                <li class="mine">Gender:@stu.Gender</li>
                <li class="mine">CGPA:@stu.CGPA</li>
                <li class="mine">Address:@stu.Address</li>
             }
            </ul>

        </div>

        <div class="box2 margin_Top">
            <h1>Personal Information</h1>

            <ul class="box1">

                <li class="mine">Name:@stu.name</li>
                <li class="mine">Gender:@stu.Gender</li>
                <li class="mine">CNIC:@stu.CNIC</li>
                <li class="mine">Email:@stu.Email</li>
                <li class="mine">CGPA:@stu.CGPA</li>
                <li class="mine">DeptNo.:@stu.DNO</li>
            </ul>

        </div>

    </div>
</body>
</html>